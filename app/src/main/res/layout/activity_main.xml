<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/author"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/common_spacing_medium"
        android:layout_marginEnd="@dimen/common_spacing_medium"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/author"
        app:layout_constraintBottom_toTopOf="@+id/published"
        app:layout_constraintEnd_toStartOf="@id/menu"
        app:layout_constraintStart_toEndOf="@id/avatar"
        app:layout_constraintTop_toTopOf="@+id/avatar" />
    <!-- tools:text="@sample/posts.json/data/author" -->

    <TextView
        android:id="@+id/published"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_spacing_medium"
        android:layout_marginEnd="@dimen/common_spacing_medium"
        android:text="@string/published"
        app:layout_constraintBottom_toBottomOf="@+id/avatar"
        app:layout_constraintEnd_toStartOf="@+id/menu"
        app:layout_constraintStart_toEndOf="@+id/avatar"
        app:layout_constraintTop_toBottomOf="@id/author" />
    <!-- tools:text="@sample/posts.json/data/published" -->

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/posts_avatar_size"
        android:layout_height="@dimen/posts_avatar_size"
        android:layout_centerInParent="true"
        android:contentDescription="@string/description_post_author_avatar"
        android:src="@drawable/netology"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!--tools:srcCompat="@sample/posts_avatars" /> -->

    <ImageButton
        android:id="@+id/menu"
        android:layout_width="@dimen/button_size"
        android:layout_height="@dimen/button_size"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/description_more_vert"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_more_vert_24"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
    <!-- tools:ignore Small size & Speakable Button (при ненадобности удалить) -->

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/upper_menu_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:barrierMargin="@dimen/common_spacing_large"
        app:constraint_referenced_ids="avatar, published" />

    <TextView
        android:id="@+id/main_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_spacing_large"
        android:layout_marginTop="@dimen/common_spacing_large"
        android:layout_marginEnd="@dimen/common_spacing_large"
        android:layout_marginBottom="@dimen/common_spacing_large"
        android:text="@string/main_screen_message"
        app:layout_constraintBottom_toTopOf="@id/downer_menu_barrier"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/upper_menu_barrier" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/downer_menu_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:barrierMargin="@dimen/common_spacing_large"
        app:constraint_referenced_ids="main_text" />

    <ImageButton
        android:id="@+id/likes"
        android:layout_width="@dimen/button_size"
        android:layout_height="@dimen/button_size"
        android:layout_marginTop="@dimen/common_spacing_large"
        android:background="@android:color/transparent"
        android:contentDescription="@string/description_likes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/downer_menu_barrier"
        app:srcCompat="@drawable/ic_baseline_favorite_border_24"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
    <!-- tools:ignore Small size & Speakable Button (при ненадобности удалить
        в likes, shares, views) -->

    <TextView
        android:id="@+id/likes_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_spacing_medium"
        android:text="10"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/likes"
        app:layout_constraintStart_toEndOf="@+id/likes"
        app:layout_constraintTop_toTopOf="@+id/likes" />

    <ImageButton
        android:id="@+id/shares"
        android:layout_width="@dimen/button_size"
        android:layout_height="@dimen/button_size"
        android:layout_marginStart="@dimen/common_spacing_extra_large"
        android:layout_marginTop="@dimen/common_spacing_large"
        android:background="@android:color/transparent"
        android:contentDescription="@string/description_shares"
        app:layout_constraintStart_toEndOf="@+id/likes_num"
        app:layout_constraintTop_toTopOf="@+id/downer_menu_barrier"
        app:srcCompat="@drawable/ic_baseline_share_24"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/shares_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_spacing_medium"
        android:text="5"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/shares"
        app:layout_constraintStart_toEndOf="@+id/shares"
        app:layout_constraintTop_toTopOf="@+id/shares" />

    <ImageButton
        android:id="@+id/views"
        android:layout_width="@dimen/button_size"
        android:layout_height="@dimen/button_size"
        android:layout_marginTop="@dimen/common_spacing_large"
        android:layout_marginEnd="@dimen/common_spacing_medium"
        android:background="@android:color/transparent"
        android:contentDescription="@string/description_views"
        app:layout_constraintEnd_toStartOf="@+id/views_num"
        app:layout_constraintTop_toTopOf="@id/downer_menu_barrier"
        app:srcCompat="@drawable/ic_baseline_remove_red_eye_24"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/views_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/views"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/views" />


</androidx.constraintlayout.widget.ConstraintLayout>